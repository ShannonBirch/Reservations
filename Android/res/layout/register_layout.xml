<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/register_layout"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#CCFFCC">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/register_user_text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="100dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:hint="Username"/>

            <EditText
                android:id="@+id/register_pass1_text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="160dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:hint="Password"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/register_pass2_text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="210dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:hint="Password"
                android:inputType="textPassword"/>

            <EditText
                android:id="@+id/register_fname_text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="260dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:hint="First Name"/>

            <EditText
                android:id="@+id/register_lname_text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="310dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:hint="Last Name"/>

            <EditText
                android:id="@+id/register_email_text"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="360dp"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:hint="email"/>




            <Button
                android:layout_marginTop="410dp"
                android:layout_centerHorizontal="true"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="Register"
                android:onClick="registerAccount"
                android:background="#B26B8F"
                />

            <Button
                android:layout_marginTop="480dp"
                android:layout_centerHorizontal="true"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="Already have an Account"
                android:onClick="loginReturn"
                android:background="#B26B8F"
                />
        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>